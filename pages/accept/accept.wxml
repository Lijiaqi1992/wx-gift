<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">图标</view>
</cu-custom>
<scroll-view scroll-y class="scrollPage">
  <image src='/images/BasicsBg.png' mode='widthFix' class='png' style='width:100%;height:486rpx'></image>
  <view class="cu-form-group margin-top">
    <view class="title">姓名</view>
    <input model:value="{{name}}" placeholder="请输入姓名"></input>
  </view>
  <view class="cu-form-group ">
    <view class="title">事由</view>
    <input model:value="{{reason}}" placeholder="婚、乔"></input>
  </view>
  <view class="cu-form-group ">
    <view class="title">金额</view>
    <input  type="digit" model:value="{{inMoney}}" placeholder="我收到的"></input>
  </view>
  <view class="cu-form-group margin-top">
    <view class="title">是否还礼</view>
    <switch bindchange="hlchange"></switch>
  </view>
  <view class="cu-form-group" wx:if="{{hl}}">
    <view class="title">还礼金额</view>
    <input type="digit" model:value="{{returnMoney}}" placeholder=""></input>
  </view>
  <view class="cu-form-group" wx:if="{{hl}}">
    <view class="title">还礼日期</view>
    <picker mode="date" model:value="{{returnDate}}" start="2020-01-01" end="2050-12-31" bindchange="DateChange">
      <view class="picker">
        {{returnDate}}
      </view>
    </picker>
  </view>
  <view class="cu-form-group " wx:if="{{hl}}">
    <view class="title">还礼事由</view>
    <input placeholder="" model:value="{{returnReason}}"></input>
  </view>
  
  <view class="cu-form-group margin-top" >
    <view class="title">备注</view>
    <input model:value="{{note}}" placeholder=""></input>
  </view>
  <view class="padding flex flex-direction">
    <button class="cu-btn bg-blue lg" bindtap="create">创建收礼</button>
  </view>
  <view class='cu-tabbar-height'></view>
</scroll-view>