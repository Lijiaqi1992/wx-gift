<cu-custom bgColor="bg-gradual-pink" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">记录</view>
</cu-custom>

<scroll-view scroll-x class="bg-white nav">
  <view class="flex text-center">
    <view class="cu-item flex-sub {{index==TabCur?'text-orange cur':''}}" wx:for="{{tab}}" wx:key bindtap="tabSelect" data-id="{{index}}">
      {{item.name}}
    </view>
  </view>
</scroll-view>
<scroll-view scroll-y class="scrollPage">
<view class="" wx:for="{{list}}" wx:key="key">
  <view class="cu-card article">
    <view class="cu-item shadow">
      <view class="title">
        <view class="text-cut">{{item.name}}</view>
      </view>
      <view class="content">
        <view class="desc align-end">
          <view><text class="text-left text-grey ">{{item.createDate}}</text></view>
          <view><text class="text-price text-red text-right text-xxl">{{item.inMoney}}</text></view>
        </view>
      </view>
    </view>
  </view>
</view>
</scroll-view>